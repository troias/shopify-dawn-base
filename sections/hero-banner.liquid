{% schema %}
  {
    "name": "Hero Banner",
    "settings": [
      {
        "type": "textarea",
        "label": "Description",
        "id": "description"
      }
    ],
    "presets": [
      {
        "category": "Custom",
        "name": "Default",
        "settings": {
          "description": "This is a description"
        }
      }
    ]
  }
{% endschema %}

{% assign array_string = "1,3,4,6,8" %}
{% assign array = array_string | split: "," %}

{% comment %} assign a variable productsToDisplay with a collection fetched with hands men {% endcomment %}

{% assign productsToDisplay = collections["men"] %}

  <div class="hero-banner">
  <h1 class="text-4xl font-bold">All Products</h1>

  {% comment %} display products from productsToDisplay {% endcomment %}

  {% for product in productsToDisplay.products %}
    <div class="product">
      <a href="{{ product.url }}">
        <img
          src="{{ product.featured_image | img_url: '500x' }}"
          alt="{{ product.title | escape }}"
          class="w-full h-auto">
        <h2 class="text-xl font-semibold">{{ product.title }}</h2>
        <p class="text-gray-600">{{ product.price | money }}</p>
      </a>
    </div>
  {% endfor %}

  {% comment %} display all products from collections.all.products {% endcomment %}

  {% for product in collections.all.products %}
    <div class="product">
      <a href="{{ product.url }}">
        <img
          src="{{ product.featured_image | img_url: '500x' }}"
          alt="{{ product.title | escape }}"
          class="w-full h-auto">
        <h2 class="text-xl font-semibold">{{ product.title }}</h2>
        <p class="text-gray-600">{{ product.price | money }}</p>
      </a>
    </div>
  {% endfor %}
</div>